<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
            <block class="Magento\Backend\Block\Widget\Tab" name="product.custom.description">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Structured Description</argument>
                    <argument name="url" xsi:type="url" path="snowcustomdescription/custom/description">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">advanced</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-custom-description</argument>
                <argument name="block" xsi:type="string">product.custom.description</argument>
            </action>
        </referenceBlock>
    </body>
</page>
